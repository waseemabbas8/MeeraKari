<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/w"
        android:alpha="0.5"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Home"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/s_back2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/rew" />



            </LinearLayout>

            <GridLayout
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/additem"
                    android:layout_width="55pt"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:elevation="5pt"
                    app:cardMaxElevation="5pt"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#FFB500"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2pt"
                        android:gravity="center">

                        <ImageView
                            android:src="@mipmap/maxresdefault"
                            android:layout_width="match_parent"
                            android:layout_height="80pt"
                            android:scaleType="centerCrop"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/overlay_dark_10" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="?android:actionBarSize"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:background="@drawable/shape_round_grey"
                            android:padding="@dimen/spacing_large">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Items"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_gravity="center"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/addspeciality"
                    android:layout_width="55pt"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:elevation="5pt"
                    app:cardMaxElevation="5pt"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#FFB500"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2pt"
                        android:gravity="center">

                        <ImageView
                            android:src="@mipmap/knit"
                            android:layout_width="match_parent"
                            android:layout_height="80pt"
                            android:scaleType="centerCrop"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/overlay_dark_10" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="?android:actionBarSize"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:background="@drawable/shape_round_grey"
                            android:padding="@dimen/spacing_large">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Speciality"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_gravity="center"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/add_description"
                    android:layout_width="55pt"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:elevation="5pt"
                    app:cardMaxElevation="5pt"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#FFB500"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2pt"
                        android:gravity="center">

                        <ImageView
                            android:src="@mipmap/quresh"
                            android:layout_width="match_parent"
                            android:layout_height="80pt"
                            android:scaleType="centerCrop"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/overlay_dark_10" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="?android:actionBarSize"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:background="@drawable/shape_round_grey"
                            android:padding="@dimen/spacing_large">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Description"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_gravity="center"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/edit_profile"
                    android:layout_width="55pt"
                    android:elevation="5pt"
                    app:cardMaxElevation="5pt"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#FFB500"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2pt"
                        android:gravity="center">

                        <ImageView
                            android:src="@mipmap/die"
                            android:layout_width="match_parent"
                            android:layout_height="80pt"
                            android:scaleType="centerCrop"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/overlay_dark_10" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="?android:actionBarSize"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:background="@drawable/shape_round_grey"
                            android:padding="@dimen/spacing_large">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit Profile"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_gravity="center"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/updatepassword"
                    android:layout_width="55pt"
                    android:elevation="5pt"
                    app:cardMaxElevation="5pt"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#FFB500"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2pt"
                        android:gravity="center">

                        <ImageView
                            android:src="@mipmap/ribbon"
                            android:layout_width="match_parent"
                            android:layout_height="80pt"
                            android:scaleType="centerCrop"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/overlay_dark_10" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="?android:actionBarSize"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:background="@drawable/shape_round_grey"
                            android:padding="@dimen/spacing_large">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Update Pass"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_gravity="center"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/progress"
                    android:layout_width="55pt"
                    android:elevation="5pt"
                    app:cardMaxElevation="5pt"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#FFB500"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2pt"
                        android:gravity="center">

                        <ImageView
                            android:src="@mipmap/ribbon"
                            android:layout_width="match_parent"
                            android:layout_height="80pt"
                            android:scaleType="centerCrop"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/overlay_dark_10" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="?android:actionBarSize"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:background="@drawable/shape_round_grey"
                            android:padding="@dimen/spacing_large">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Progress"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_gravity="center"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>







            </GridLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
